<?xml version="1.0" encoding="UTF-8"?>
<window id="1111">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>background</backgroundcolor>
    <include>OpenClose</include>
    <controls>
        <include>BlackBackground</include>
        <control type="group">
            <left>480</left>
            <top>130</top>
            <control type="list" id="50">
                <width>1440</width>
                <height>890</height>
                <onleft condition="!Skin.HasSetting(ViewsMenuOff)">9000</onleft>
                <onright condition="!Skin.HasSetting(Scrollbars_Passive)">60</onright>
                <onup>50</onup>
                <ondown>50</ondown>
                <pagecontrol>60</pagecontrol>
                <viewtype label="537">Big List</viewtype>
                <focusposition>3</focusposition>
                <preloaditems>2</preloaditems>
                <scrolltime>250</scrolltime>
                <itemlayout width="1380" height="81">
                    <control type="label" description="Main Label">
                        <top>4</top>
                        <width>1380</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="1380" height="81">
                    <control type="image">
                        <animation effect="fade" end="0" time="30">UnFocus</animation>
                        <width>1440</width>
                        <height>81</height>
                        <texture colordiffuse="$VAR[diffuseselect]" flipx="true">images/buttonselect1.png</texture>
                    </control>
                    <control type="label" description="Main Label">
                        <top>4</top>
                        <width>1380</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
                <content target="video">special://skin/resources/guides.m3u</content>
            </control>
        </control>
        <control type="group">
            <visible>Control.IsVisible(60)</visible>
            <top>85</top>
            <control type="image">
                <left>1865</left>
                <height>910</height>
                <width>100</width>
                <texture border="50" colordiffuse="AAFFFFFF">sidepanel/Back.png</texture>
            </control>
            <control type="scrollbar" id="60">
                <right>14</right>
                <top>30</top>
                <height>850</height>
                <onleft>50</onleft>
                <onright>noop</onright>
            </control>
        </control>
        <control type="grouplist">
            <right>15</right>
            <align>right</align>
            <orientation>horizontal</orientation>
            <itemgap>5</itemgap>
            <control type="label" description="Clock">
                <visible>!Skin.HasSetting(HideClock)</visible>
                <width>195</width>
                <height>40</height>
                <align>right</align>
                <aligny>center</aligny>
                <font>size21</font>
                <textcolor>White</textcolor>
                <label>$INFO[System.Time]</label>
            </control>
            <control type="image">
                <visible>System.InternetState + !Skin.HasSetting(hideconnection)</visible>
                <width>25</width>
                <height>42</height>
                <texture colordiffuse="black">wireless.png</texture>
                <aspectratio>scale</aspectratio>
            </control>
            <control type="image">
                <visible>!System.InternetState + !Skin.HasSetting(hideconnection)</visible>
                <width>30</width>
                <height>42</height>
                <texture>wireless.png</texture>
                <colordiffuse>44FFFFFF</colordiffuse>
            </control>
        </control>
        <control type="grouplist">
            <top>20</top>
            <centerleft>960</centerleft>
            <width>960</width>
            <height>60</height>
            <align>center</align>
            <orientation>horizontal</orientation>
            <control type="label" id="7777" description="Heading">
                <width>auto</width>
                <height>60</height>
                <font>size42</font>
                <scroll>false</scroll>
                <label>VIDEOGUIDES</label>
            </control>
            <control type="label" description="Number of files">
                <width>auto</width>
                <height>70</height>
                <font>size22</font>
                <textcolor>gray</textcolor>
                <label>$INFO[Container(50).NumItems, (,)]</label>
            </control>
        </control>
        <control type="videowindow">
            <description>My first video control</description>
            <posx>80</posx>
            <posy>60</posy>
            <width>550</width>
            <height>550</height>
            <visible>true</visible>
        </control>
    </controls>
</window>