                    <onclick>Container.SetViewMode(52)</onclick>
                    <selected>Control.IsVisible(52) + !Skin.HasSetting(naked)</selected>
                    <label>SiO2 View</label>
                </control>
                <!--todo label ?-->
                <control type="radiobutton" id="602" description="sio2x">
                    <include>DialogButt</include>
