<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="widelist">
        <control type="group" description="StreamingList">
            <visible>Control.IsVisible(501)</visible>
            <control type="group">
                <control type="fixedlist" id="501">
                    <top>114</top>
                    <width>1920</width>
                    <height>666</height>
                    <onleft condition="!Skin.HasSetting(ViewsMenuOff)">9000</onleft>
                    <onright condition="!Skin.HasSetting(Scrollbars_Passive)">60</onright>
                    <onup>50</onup>
                    <ondown>50</ondown>
                    <pagecontrol>60</pagecontrol>
                    <viewtype label="537">Big List</viewtype>
                    <focusposition>3</focusposition>
                    <movement>4</movement>
                    <preloaditems>4</preloaditems>
                    <scrolltime>250</scrolltime>
                    <itemlayout width="890" height="111">
                        <control type="group">
                            <animation condition="IsEmpty(ListItem.Label2) + IsEmpty(ListItem.Duration) + IsEmpty(ListItem.Year) + IsEmpty(ListItem.Artist)" effect="slide" end="0,20" time="0" reversible="true">Conditional</animation>
                            <control type="label" description="Main Label">
                                <left>45</left>
                                <width>725</width>
                                <include>BigListTitle</include>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                        <control type="group">
                            <control type="label" description="Label2">
                                <visible>[!IsEmpty(ListItem.Artist) | Container.Content(Movies) | Container.Content(TvShows)] + !Container.Content(songs)</visible>
                                <left>45</left>
                                <width>630</width>
                                <include>BigListDetails</include>
                                <label>$INFO[ListItem.Year]$INFO[ListItem.Duration, • , $LOCALIZE[31038]]$INFO[ListItem.label2, • $LOCALIZE[563]:]$INFO[ListItem.Votes, • ,$LOCALIZE[205]]</label>
                            </control>
                            <control type="label" description="Label2">
                                <visible>container.content(episodes) | Container.Content(songs)</visible>
                                <left>45</left>
                                <align>left</align>
                                <include>BigListDetails</include>
                                <label>$INFO[ListItem.Duration,$LOCALIZE[180]: , $LOCALIZE[31038]]</label>
                            </control>
                        </control>
                        <include>listline</include>
                    </itemlayout>
                    <focusedlayout width="890" height="111">
                        <control type="image">
                            <animation effect="fade" end="0" time="30">UnFocus</animation>
                            <width>1900</width>
                            <height>111</height>
                            <texture colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texture>
                        </control>
                        <control type="group">
                            <animation condition="IsEmpty(ListItem.Label2) + IsEmpty(ListItem.Duration) + IsEmpty(ListItem.Year)  + IsEmpty(ListItem.Artist)" effect="slide" start="0,0" end="0,20" time="0" reversible="true">Conditional</animation>
                            <control type="label" description="Main Label">
                                <left>45</left>
                                <width>1800</width>
                                <include>BigListTitleFO</include>
                                <label>$INFO[ListItem.Label]$INFO[ListItem.Label]$INFO[ListItem.Label]$INFO[ListItem.Label]$INFO[ListItem.Label]$INFO[ListItem.Label]$INFO[ListItem.Label]$INFO[ListItem.Label]$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                        <control type="label" description="Label2">
                            <visible>[!IsEmpty(ListItem.Artist) | Container.Content(Movies) | Container.Content(TvShows)] + !Container.Content(songs)</visible>
                            <left>45</left>
                            <width>1900</width>
                            <include>BigListDetails</include>
                            <label>$INFO[ListItem.Year]$INFO[ListItem.Duration, • , $LOCALIZE[31038]]$INFO[ListItem.label2, • $LOCALIZE[563]:]$INFO[ListItem.Votes, • ,$LOCALIZE[205]]</label>
                        </control>
                        <control type="label" description="Label2">
                            <visible>container.content(episodes) | Container.Content(songs)</visible>
                            <left>45</left>
                            <width>1900</width>
                            <align>left</align>
                            <include>BigListDetails</include>
                            <label>$INFO[ListItem.Duration,$LOCALIZE[180]: , $LOCALIZE[31038]]</label>
                        </control>
                        <include>listline</include>
                    </focusedlayout>
                </control>
            </control>
            <control type="scrollbar" id="60">
                <left>39r</left>
                <top>114</top>
                <height>650</height>
                <onleft>501</onleft>
                <onright>noop</onright>
            </control>
            <control type="image">
                <top>780</top>
                <width>1920</width>
                <height>1</height>
                <texture>lines/line.png</texture>
            </control>
            <control type="image">
                <centertop>930</centertop>
                <centerleft>160</centerleft>
                <width>240</width>
                <height>240</height>
                <texture>$INFO[ListItem.Art(thumb)]</texture>
                <aspectratio>keep</aspectratio>
                <bordertexture>images/white.png</bordertexture>
                <bordersize>4</bordersize>
            </control>
            <control type="image">
                <centertop>930</centertop>
                <centerleft>160</centerleft>
                <width>240</width>
                <height>240</height>
                <texture>$INFO[ListItem.Art(thumb)]</texture>
                <aspectratio>keep</aspectratio>
                <bordertexture>images/white.png</bordertexture>
                <bordersize>4</bordersize>
            </control>
        </control>
    </include>
</includes>