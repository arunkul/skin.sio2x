<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">575</defaultcontrol>

    <backgroundcolor>background</backgroundcolor>
    <include>OpenClose</include>
    <controls>
        <include>BlackBackground</include>
        <include>WindowsTopInfos</include>
        <control type="list" id="575">
            <top>80</top>
            <left>960</left>
            <width>960</width>
            <height>1000</height>
            <onleft>noop</onleft>
            <onright>noop</onright>
            <onup>575</onup>
            <ondown>575</ondown>
            <pagecontrol>60</pagecontrol>
            <viewtype label="500">500</viewtype>
            <preloaditems>4</preloaditems>
            <scrolltime tween="sine" easing="inout">280</scrolltime>
            <itemlayout width="500" height="70">
                <control type="label" description="Main Label">
                    <left>30</left>
                    <height>70</height>
                    <width>800</width>
                    <aligny>center</aligny>
                    <scroll>false</scroll>
                    <font>size33</font>
                    <textcolor>maindim</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>
            <focusedlayout width="500" height="70">
                <control type="image">
                    <visible>Control.HasFocus(575)</visible>
                    <width>960</width>
                    <height>70</height>
                    <texture colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texture>
                </control>
                <control type="label" description="Main Label">
                    <left>30</left>
                    <height>70</height>
                    <width>800</width>
                    <scroll>false</scroll>
                    <font>size33</font>
                    <textcolor>main</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </focusedlayout>
            <content>
                <item id="0" description="hpage customizer">
                    <label>$LOCALIZE[31052]</label>
                    <onclick>ActivateWindow(1117)</onclick>
                </item>
                <item id="1" description="Lyrics">
                    <label>$LOCALIZE[31062]    $INFO[Skin.String(LyricPath)]</label>
                    <onclick>Skin.SetAddon(LyricPath,xbmc.python.lyrics)</onclick>
                </item>
                <item id="2" description="viewsoff">
                    <label>$LOCALIZE[31044]</label>
                    <onclick>Skin.ToggleSetting(ViewsMenuOff)</onclick>
                </item>
                <item id="3" description="Colormenu">
                    <label>$LOCALIZE[31033]</label>
                    <onclick>Skin.ToggleSetting(colormenu)</onclick>
                </item>
                <item id="4" description="Quits">
                    <label>$LOCALIZE[31049] $VAR[quitlabel]</label>
                    <onclick>ActivateWindow(1114)</onclick>
                </item>
                <item id="5" description="Clock">
                    <label>$LOCALIZE[31047]</label>
                    <onclick>Skin.ToggleSetting(HideClock)</onclick>
                </item>
                <item id="6" description="Musiclink">
                    <label>$LOCALIZE[31053] :   $INFO[Skin.String(MusicLink)]</label>
                    <onclick>ActivateWindow(1121)</onclick>
                </item>
                <item id="7" description="bkgrnd">
                    <label>31028</label>
                    <onclick condition="IsEmpty(Skin.String(CustomBgHome))">Skin.SetFile(CustomBgHome,.jpg|.png,special://skin/backgrounds)</onclick>
                    <onclick condition="!IsEmpty(Skin.String(CustomBgHome))">Skin.Reset(CustomBgHome)</onclick>
                    <onclick>activatewindow(SystemSettings)</onclick>
                </item>
                <item id="8" description="ShelfImg">
                    <label>31030</label>
                    <onclick condition="!Skin.HasSetting(CustomImage)">Skin.SetImage(ShelfCustomImage)</onclick>
                    <onclick condition="Skin.HasSetting(CustomImage)">Skin.Reset(CustomImage)</onclick>
                    <onclick condition="!Skin.HasSetting(CustomImage)">Skin.SetBool(CustomImage)</onclick>
                </item>
                <item id="9" description="connection">
                    <label>31061</label>
                    <onclick>Skin.ToggleSetting(hideconnection)</onclick>
                </item>
                <item id="10" description="no3d">
                    <label>31421</label>
                    <onclick>Skin.ToggleSetting(no3d)</onclick>
                </item>
                <item id="11" description="no Info">
                    <label>$LOCALIZE[31067]  $VAR[infosicon]</label>
                    <onclick>Skin.ToggleSetting(noinfosicon)</onclick>
                </item>
                <item id="12" description="home badge">
                    <label>$LOCALIZE[31027]</label>
                    <onclick>Skin.ToggleSetting(unwatchedbadge)</onclick>
                </item>
                <item id="13">
                    <label>31069</label>
                    <onclick>Skin.ToggleSetting(naked)</onclick>
                </item>
                <item id="14">
                    <label>31036</label>
                    <onclick>Skin.ResetSettings</onclick>
                    <onclick>XBMC.ReloadSkin()</onclick>
                </item>
                <item id="15">
                    <label>Debug</label>
                    <onclick>Skin.ToggleDebug</onclick>
                </item>
            </content>
        </control>
        <include>Linemiddle</include>
        <control type="group" description="Left panel">
            <top>80</top>
            <control type="image" description="HomePageCustomizer">
                <visible>Container(575).HasFocus(0)</visible>
                <include>Help_Panel</include>
                <texture colordiffuse="main">help/homemenu.png</texture>
            </control>
            <control type="image" description="HomePageCustomizer">
                <visible>Container(575).HasFocus(0)</visible>
                <include>Help_Panel</include>
                <texture colordiffuse="main">help/homemenu.png</texture>
            </control>
            <control type="image" description="lyrics">
                <visible>Container(575).HasFocus(1)</visible>
                <include>Help_Panel</include>
                <texture>$INFO[System.AddonIcon(Skin.String(LyricPath))]</texture>
            </control>
            <control type="image" description="lyrics">
                <visible>Container(575).HasFocus(1) + String.IsEmpty(Skin.String(LyricPath))</visible>
                <include>Help_Panel</include>
                <texture>help/off.png</texture>
            </control>
            <control type="image" description="Menuviews">
                <visible>Container(575).HasFocus(2)</visible>
                <include>Help_Panel</include>
                <texture>help/optionsmenu.png</texture>
            </control>
            <control type="image" description="Menuviews">
                <visible>Container(575).HasFocus(2) + Skin.HasSetting(ViewsMenuOff)</visible>
                <include>Help_Panel</include>
                <texture>help/off.png</texture>
            </control>
            <control type="image" description="ColorMenu">
                <visible>Container(575).HasFocus(3) + !Skin.HasSetting(colormenu)</visible>
                <include>Help_Panel</include>
                <texture>icons/darkorange.png</texture>
            </control>
            <control type="image" description="ColorMenuOff">
                <visible>Container(575).HasFocus(3) + Skin.HasSetting(colormenu)</visible>
                <include>Help_Panel</include>
                <texture>icons/base.png</texture>
            </control>
            <control type="image" description="quits">
                <visible>Container(575).HasFocus(4)</visible>
                <include>Help_Panel</include>
                <texture colordiffuse="main">$VAR[quiticon]</texture>
            </control>
            <control type="image" description="clock">
                <visible>Container(575).HasFocus(5)</visible>
                <include>Help_Panel</include>
                <texture colordiffuse="main">help/clock.png</texture>
            </control>
            <control type="image" description="clock">
                <visible>Container(575).HasFocus(5) + Skin.HasSetting(HideClock)</visible>
                <include>Help_Panel</include>
                <texture>help/off.png</texture>
            </control>
            <control type="image" description="MUSIC">
                <visible>Container(575).HasFocus(6)</visible>
                <include>Help_Panel</include>
                <texture colordiffuse="main">icons/music.png</texture>
            </control>
            <control type="image" description="custom BKGRND">
                <visible>Container(575).HasFocus(7)</visible>
                <include>Help_Panel</include>
                <bordersize>4</bordersize>
                <bordertexture colordiffuse="main">images/white.png</bordertexture>
                <texture>$VAR[bgimg]</texture>
            </control>
            <control type="image" description="icon shelf">
                <visible>Container(575).HasFocus(8)</visible>
                <include>Help_Panel</include>
                <texture>$VAR[ShelfLogo]</texture>
            </control>
            <control type="image" description="Network">
                <centerleft>480</centerleft>
                <visible>Container(575).HasFocus(9)</visible>
                <include>Help_Panel</include>
                <colordiffuse>dimgray</colordiffuse>
                <texture colordiffuse="main">help/wireless.png</texture>
            </control>
            <control type="image" description="NetworkOFF">
                <visible>Container(575).HasFocus(9) + Skin.HasSetting(hideconnection)</visible>
                <include>Help_Panel</include>
                <texture>help/off.png</texture>
            </control>
            <control type="image" description="3d">
                <visible>Container(575).HasFocus(10)</visible>
                <include>Help_Panel</include>
                <texture>icons/3D.png</texture>
            </control>
            <control type="image" description="3d">
                <visible>Container(575).HasFocus(10) + Skin.HasSetting(no3d)</visible>
                <include>Help_Panel</include>
                <texture>help/Off.png</texture>
            </control>
            <control type="image" description="badge">
                <visible>Container(575).HasFocus(12)</visible>
                <include>Help_Panel</include>
                <texture>help/badge.png</texture>
            </control>
            <control type="group">
                <visible>Container(575).HasFocus(12) + !Skin.HasSetting(unwatchedbadge)</visible>
                <centerleft>630</centerleft>
                <centertop>126</centertop>
                <width>65</width>
                <height>65</height>
                <control type="image" description="3d">
                    <width>65</width>
                    <height>65</height>
                    <texture>badges/badgecount.png</texture>
                </control>
                <control type="label">
                    <height>62</height>
                    <font>Size28</font>
                    <align>center</align>
                    <shadowcolor>-</shadowcolor>
                    <label>$NUMBER[222]</label>
                </control>
            </control>
            <control type="image" description="slider">
                <visible>Container(575).HasFocus(13)</visible>
                <include>Help_Panel</include>
                <texture>help/sioslider.jpg</texture>
                <bordertexture colordiffuse="main">images/white.png</bordertexture>
                <bordersize>4</bordersize>
            </control>
            <control type="image" description="slider_off">
                <visible>Container(575).HasFocus(13) + Skin.HasSetting(naked)</visible>
                <include>Help_Panel</include>
                <texture>help/off.png</texture>
            </control>
            <control type="image" description="reset">
                <visible>Container(575).HasFocus(14)</visible>
                <include>Help_Panel</include>
                <texture colordiffuse="main">help/warning.png</texture>
            </control>
        </control>
        <control type="image" description="Line">
            <centerleft>480</centerleft>
            <top>540</top>
            <height>1</height>
            <width>900</width>
            <texture colordiffuse="main">lines/Line1.png</texture>
        </control>
        <control type="textbox" description="HelpDetails">
            <centerleft>480</centerleft>
            <top>560</top>
            <width>660</width>
            <height>380</height>
            <font>size33</font>
            <align>justify</align>
            <label>$VAR[helptext]</label>
        </control>
        <control type="label" description="custom shelfimage path">
            <include>VisibleFade</include>
            <visible>Container(575).Position(8) + Skin.HasSetting(CustomImage)</visible>
            <top>500</top>
            <width>960</width>
            <height>25</height>
            <font>size21</font>
            <align>center</align>
            <textcolor>main</textcolor>
            <label>$VAR[ShelfLogo]</label>
        </control>
        <control type="label" description="custom background path">
            <include>VisibleFade</include>
            <visible>Container(575).Position(7) + Skin.HasSetting(CustomBg)</visible>
            <top>500</top>
            <width>960</width>
            <height>25</height>
            <font>size21</font>
            <align>center</align>
            <textcolor>main</textcolor>
            <label>$VAR[bgimg]</label>
        </control>
    </controls>
</window>
