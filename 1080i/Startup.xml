<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload>AlarmClock(CloseStartup,ReplaceWindow($INFO[System.StartupWindow]),00:03,silent)</onload>
    <backgroundcolor>background</backgroundcolor>
    <animation type="WindowOpen">
        <effect type="fade" start="0" end="100" time="400" delay="200" />
    </animation>
    <animation type="WindowClose">
        <effect type="fade" start="100" end="0" time="600" delay="200" />
        <effect type="zoom" center="960,540" start="100" end="0" time="600" delay="200" tween="back" easing="in" />
    </animation>
    <controls>
        <control type="image">
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF000000">images/white.png</texture>
        </control>
        <control type="image">
            <centerleft>960</centerleft>
            <centertop>540</centertop>
            <width>256</width>
            <height>256</height>
            <texture>special://skin/icon.png</texture>
        </control>
    </controls>
</window>