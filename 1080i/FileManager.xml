<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">20</defaultcontrol>

    <backgroundcolor>0xffffffff</backgroundcolor>
    <include>OpenClose</include>
    <onunload condition="!Skin.HasSetting(FirstRun)">Skin.SetBool(FirstRun)</onunload>
    <controls>
        <include>BlackBackground</include>
        <control type="label" description="Heading">
            <include>Heading</include>
            <label>7</label>
        </control>
        <control type="image" description="Line Splitter">
            <left>960</left>
            <top>100</top>
            <height>980</height>
            <width>1</width>
            <texture>lines/LineV.png</texture>
        </control>
        <control type="group" description="Left panel">
            <left>0</left>
            <top>40</top>
            <animation condition="!Control.HasFocus(20)" effect="fade" start="100" end="50" time="20" reversible="true">Conditional</animation>
            <control type="label" id="101" description="Header Label">
                <left>45</left>
                <width>900</width>
                <align>left</align>
                <label>-</label>
                <font>size30B</font>
                <haspath>true</haspath>
                <textcolor>orange</textcolor>
            </control>
            <control type="list" id="20" description="Left File List">
                <top>126</top>
                <width>960</width>
                <height>850</height>
                <onleft>60</onleft>
                <onright>21</onright>
                <onup>20</onup>
                <ondown>20</ondown>
                <pagecontrol>60</pagecontrol>
                <itemlayout height="60" width="960">
                    <control type="label">
                        <left>100</left>
                        <width>700</width>
                        <height>60</height>
                        <font>size26</font>
                        <aligny>center</aligny>
                        <textcolor>maindim</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <right>20</right>
                        <height>60</height>
                        <width>140</width>
                        <font>size27</font>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>dimgray</textcolor>
                        <info>ListItem.Label2</info>
                    </control>
                </itemlayout>
                <focusedlayout height="60" width="960">
                    <control type="image">
                        <visible>Control.HasFocus(20)</visible>
                        <left>-20</left>
                        <width>980</width>
                        <height>60</height>
                        <texture colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texture>
                    </control>
                   <control type="label">
                        <left>100</left>
                        <width>700</width>
                        <height>60</height>
                        <font>size26</font>
                        <aligny>center</aligny>
                        <textcolor>maindim</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <right>20</right>
                        <height>60</height>
                        <width>140</width>
                        <font>size27</font>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>dimgray</textcolor>
                        <info>ListItem.Label2</info>
                    </control>
                </focusedlayout>
            </control>
            <control type="label" id="12" description="itemcount">
                <left>45</left>
                <top>40</top>
                <width>480</width>
                <align>left</align>
                <font>size26</font>
                <textcolor>gray</textcolor>
                <label>-</label>
            </control>
        </control>
        <control type="group" description="Right panel">
            <right>0</right>
            <top>40</top>
            <animation condition="!Control.HasFocus(21)" effect="fade" start="100" end="60" time="20" reversible="true">Conditional</animation>
