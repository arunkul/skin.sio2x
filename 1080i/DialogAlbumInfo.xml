<?xml version="1.0" encoding="UTF-8"?>
<window id="2001">
    <defaultcontrol always="true">300</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>0xffffffff</backgroundcolor>
    <coordinates>
        <origin x="0" y="0" />
    </coordinates>
    <include>OpenClose</include>
    <controls>
        <include>BlackBackground</include>
        <control type="group">
            <include>BlackBackground</include>
            <control type="group">
                <control type="image" description="Thumb">
                    <centerleft>480</centerleft>
                    <top>90</top>
                    <width>600</width>
                    <height>600</height>
                    <include>Icon_Fade</include>
                    <texture background="true" fallback="defaultalbumcover.png">$INFO[ListItem.Icon]</texture>
                    <aspectratio aligny="bottom">keep</aspectratio>
                </control>
                <control type="group" description="Songs and Music Videos">
                    <left>120</left>
                    <top>50</top>
                    <control type="group">
                        <top>765</top>
                        <control type="label" description="Artist">
                            <visible>IsEmpty(ListItem.Album)</visible>
                            <top>-92</top>
                            <font>size30</font>
                            <textcolor>black</textcolor>
                            <width>608</width>
                            <height>36</height>
                            <align>left</align>
                            <scroll>false</scroll>
                            <label>[B]$INFO[ListItem.Artist][/B]</label>
                        </control>
                        <control type="label" description="Album">
                            <top>-92</top>
                            <font>size30</font>
                            <textcolor>black</textcolor>
                            <width>608</width>
                            <height>36</height>
                            <align>left</align>
                            <scroll>false</scroll>
                            <label>[B]$INFO[ListItem.Album][/B]</label>
                        </control>
                        <control type="image" description="Rating">
                            <top>-45</top>
                            <height>27</height>
                            <width>150</width>
                            <colordiffuse>black</colordiffuse>
                            <aspectratio align="left">keep</aspectratio>
                            <texture colordiffuse="black">$INFO[ListItem.StarRating]</texture>
                        </control>
                        <control type="image" description="Separator">
                            <posx>0</posx>
                            <height>1</height>
                            <width>780</width>
                            <aspectratio>stretch</aspectratio>
                            <texture colordiffuse="black">lines/Line1.png</texture>
                        </control>
                        <control type="grouplist" description="Labels">
                            <posx>20</posx>
                            <top>18</top>
                            <width>808</width>
                            <orientation>vertical</orientation>
                            <control type="label" description="Album">
                                <visible>!IsEmpty(ListItem.Album)</visible>
                                <font>size30</font>
                                <width>750</width>
                                <height>30</height>
                                <scroll>false</scroll>
                                <label>$LOCALIZE[557]:  [COLOR=black]$INFO[ListItem.Artist,, â€¢ ]$INFO[ListItem.Year][/COLOR]</label>
                            </control>
                            <control type="label" description="Born/Formed">
                                <visible>IsEmpty(ListItem.Album)</visible>
                                <font>size30</font>
                                <width>750</width>
                                <height>30</height>
                                <scroll>false</scroll>
                                <label>$LOCALIZE[21893]/$LOCALIZE[21894]:  [COLOR=black]$INFO[ListItem.Property(Artist_Born)]$INFO[ListItem.Property(Artist_Formed)][/COLOR]</label>
                            </control>
                            <control type="label" description="Died/Disbanded">
                                <visible>IsEmpty(ListItem.Album) + ![IsEmpty(ListItem.Property(Artist_Died)) + IsEmpty(ListItem.Property(Artist_Died))]</visible>
                                <font>size30</font>
                                <width>750</width>
                                <height>30</height>
                                <scroll>false</scroll>
                                <label>$LOCALIZE[21897]/$LOCALIZE[21896]:  [COLOR=black]$INFO[ListItem.Property(Artist_Died)]$INFO[ListItem.Property(Artist_Disbanded)][/COLOR]</label>
                            </control>
                            <control type="label" description="Genre">
                                <font>size30</font>
                                <width>750</width>
                                <height>30</height>
                                <label>$LOCALIZE[515]:  [COLOR=black]$INFO[ListItem.Genre][/COLOR]</label>
                            </control>
                            <control type="label" description="RecordLabel">
                                <visible>!IsEmpty(ListItem.Album)</visible>
                                <font>size30</font>
                                <width>750</width>
                                <height>30</height>
                                <label>$LOCALIZE[21899]:  [COLOR=black]$INFO[ListItem.Property(Album_Label)][/COLOR]</label>
                            </control>
                        </control>
                    </control>
                </control>
                <control type="textbox" description="Plot">
                    <left>1000</left>
                    <top>60</top>
                    <width>870</width>
                    <height>900</height>
                    <font>size27</font>
                    <align>justify</align>
                    <autoscroll delay="6500" time="4000" repeat="10000"></autoscroll>
                    <label>$INFO[ListItem.Property(Album_Description)][CR]$INFO[ListItem.Property(Artist_Description)]</label>
                </control>
            </control>
        </control>
        <control type="image">
            <top>1000</top>
            <height>80</height>
            <width>1920</width>
            <aspectratio>stretch</aspectratio>
            <texture>images/BlackT.png</texture>
        </control>
        <control type="image" description="Navbar">
            <top>1000</top>
            <width>1920</width>
            <height>1</height>
            <texture>lines/Line.png</texture>
        </control>
        <control type="group" description="Options">
            <control type="grouplist" id="300">
                <posx>15</posx>
                <top>1000</top>
                <width>1890</width>
                <height>80</height>
                <itemgap>0</itemgap>
                <aligny>bottom</aligny>
                <align>center</align>
                <onup>50</onup>
                <orientation>horizontal</orientation>
                <control type="button" id="6" description="Refresh">
                    <height>80</height>
                    <width>330</width>
                    <label>184</label>
                    <font>size27</font>
                </control>
                <control type="button" id="10" description="Get Thumb">
                    <height>80</height>
                    <width>330</width>
                    <label>13405</label>
                    <font>size27</font>
                </control>
                <control type="button" id="11" description="Last FM">
                    <height>80</height>
                    <width>330</width>
                    <label>Last FM</label>
                    <font>size27</font>
                </control>
                <control type="button" id="12" description="Get FanArt">
                    <height>80</height>
                    <width>330</width>
                    <label>20413</label>
                    <font>size27</font>
                </control>
            </control>
        </control>
        <control type="image" description="line">
            <left>959</left>
            <width>1</width>
            <height>1000</height>
            <texture>lines/LineV.png</texture>
        </control>
        <control type="group">
            <visible allowhiddenfocus="true">Control.HasFocus(50)</visible>
            <control type="image">
                <centerleft>960</centerleft>
                <top>-80</top>
                <width>1000</width>
                <height>1200</height>
                <texture border="150">images/Dialog.png</texture>
            </control>
            <control type="image">
                <centerleft>960</centerleft>
                <top>140</top>
                <width>650</width>
                <height>1</height>
                <texture>lines/Line.png</texture>
            </control>
            <control type="label">
                <visible>!IsEmpty(ListItem.Album)</visible>
                <centerleft>960</centerleft>
                <top>70</top>
                <width>650</width>
                <height>60</height>
                <align>center</align>
                <label>$LOCALIZE[136]</label>
            </control>
            <control type="label">
                <visible>IsEmpty(ListItem.Album)</visible>
                <centerleft>960</centerleft>
                <top>70</top>
                <width>650</width>
                <height>60</height>
                <align>center</align>
                <label>$LOCALIZE[21888]</label>
            </control>
            <control type="list" id="50">
                <description>My first list container</description>
                <centerleft>960</centerleft>
                <top>140</top>
                <width>650</width>
                <height>800</height>
                <onup>noop</onup>
                <ondown>300</ondown>
                <onleft>300</onleft>
                <onright>300</onright>
                <orientation>vertical</orientation>
                <scrolltime tween="sine" easing="out">200</scrolltime>
                <itemlayout  height="80" width="650">
                    <control type="image">
                        <top>5</top>
                        <left>5</left>
                        <width>70</width>
                        <height>70</height>
                        <info>ListItem.Icon</info>
                    </control>
                    <control type="label">
                        <left>80</left>
                        <width>570</width>
                        <height>80</height>
                        <align>left</align>
                        <shadowcolor>-</shadowcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="80" width="650">
                    <control type="image">
                        <width>650</width>
                        <height>80</height>
                        <visible>Control.HasFocus(50)</visible>
                        <texture colordiffuse="$VAR[diffuseselect]">images/buttonselect1.png</texture>
                    </control>
                    <control type="image">
                        <top>5</top>
                        <left>5</left>
                        <width>70</width>
                        <height>70</height>
                        <info>ListItem.Icon</info>
                    </control>
                    <control type="label">
                        <left>80</left>
                        <width>570</width>
                        <height>80</height>
                        <align>left</align>
                        <shadowcolor>-</shadowcolor>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
            </control>
        </control>

    </controls>
</window>
